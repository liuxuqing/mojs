{el = '.feature'}
  color       white
  text-align  center
  width       20*gs
  &__image
    width   98*PX
    height  67*PX
    retina 'i/feature-fast'
    margin-bottom 3.5*gs
    fly()
  &__header
    font-size       18*PX
    letter-spacing  1.7*PX
    margin-bottom   gs
  &__text
    opacity         .5
    font-size       12*PX
    letter-spacing  PX
    line-height     1.85
  // &--fast
  //   {el}__image
  //     margin-bottom 4*gs
  &--retina
    {el}__image
      rect 72*PX
      retina 'i/feature-retina'
  &--simple
    {el}__image
      width  68*PX
      height 72*PX
      retina 'i/feature-simple'
  &--modular
    {el}__image
      width  81*PX
      height 74*PX
      retina 'i/feature-modular'
  &--robust
    {el}__image
      width  140*PX
      height 100*PX
      retina 'i/feature-robust'
  &--open-sourced
    {el}__image
      width  76*PX
      height 78*PX
      retina 'i/feature-open-sourced'
      
    